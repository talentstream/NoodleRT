<scene>
    <integrator type="path">
        <integer name="spp" value="100"/>
        <integer name="maxDepth" value="50"/>
        <aggregate type="bvh">
            <!--sphere center-->
            <primitive type="geometry">
                <shape type="sphere">
                    <float name="radius" value="0.5"/>
                    <point name="center" value="0.0 0.0 -1.0"/>
                </shape>
                <bxdf type="diffuse">
                    <texture type="solid">
                        <color name="albedo" value="0.1 0.2 0.5"/>
                    </texture>
                </bxdf>
            </primitive>
            <!--sphere left bigger-->
            <primitive type="geometry">
                <shape type="sphere">
                    <float name="radius" value="0.5"/>
                    <point name="center" value="-1.0 0.0 -1.0"/>
                </shape>
                <bxdf type="dielectric">
                </bxdf>
            </primitive>
            <!--sphere right-->
            <primitive type="geometry">
                <shape type="sphere">
                    <float name="radius" value="0.5"/>
                    <point name="center" value="1.0 0.0 -1.0"/>
                </shape>
                <bxdf type="reflection">
                    <color name="albedo" value="0.8 0.6 0.2"/>
                    <float name="roughness" value="0.0"/>
                </bxdf>
            </primitive>
            <!--sphere ground-->
            <primitive type="geometry">
                <shape type="sphere">
                    <float name="radius" value="100.0"/>
                    <point name="center" value="0.0 -100.5 -1.0"/>
                </shape>
                <bxdf type="diffuse">
                    <texture type="solid">
                        <color name="albedo" value="0.8 0.8 0.0"/>
                    </texture>
                </bxdf>
            </primitive>
        </aggregate>
        <camera type="perspective">
            <film>
                <integer name="width" value="400"/>
                <integer name="height" value="225"/>
            </film>
            <float name="fov" value="45.0"/>
            <point name="lookFrom" value="-2.0 2.0 1.0"/>
            <point name="lookAt" value="0.0 0.0 -1.0"/>
            <vector name="up" value="0.0 1.0 0.0"/>
        </camera>
        <sampler type="independent">
        </sampler>
        <light type="infinite">
        </light>
    </integrator>
</scene>